{
  "version": 4,
  "configurations": [
    {
      "name": "macOS",
      "includePath": [
        "${workspaceFolder}/**",
        // пути к вашим header-only либам (если нужны)
        "${workspaceFolder}/external/httplib",
        "${workspaceFolder}/external/json",
        // путь к libpqxx из pkg-config:
        "/opt/homebrew/Cellar/libpqxx/7.10.1/include"
      ],
      "defines": [],
      "macFrameworkPath": [
        "/System/Library/Frameworks",
        "/Library/Frameworks"
      ],
      "compilerPath": "/usr/bin/clang++",    // или ваш g++
      "cStandard": "c11",
      "cppStandard": "c++17",
      "intelliSenseMode": "clang-x64"
    }
  ]
}